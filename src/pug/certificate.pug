doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        include modules/favicon-manifest
        title Руководство по эксплуатации
    body

        include modules/header 

        main(class="main footer-certificate__main certificate")
            .wr-bread-crumbs
                include modules/bread-crumbs

            .line-right.footer-certificate__line-right 

            .footer-certificate__wr-content
                .footer-certificate__wr-title 
                    h1.footer-certificate__title Сертификат официального дистрибьютора WMF

                ul.footer-certificate__list 
                    li.footer-certificate__item 
                        img(src="../img/certificate-page-1.webp" data-zoomitem="1" alt="Сертификат первая страница").footer-certificate__img
                    li.footer-certificate__item 
                        img(src="../img/certificate-page-2.webp" alt="Сертификат вторая страница").footer-certificate__img


            .line-left.footer-certificate__line-left

        .cert-zoom__cover 
            .cert-zoom__wr-cloze 
                .cert-zoom__cloze 
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 35 35" fill="none">
                        <path d="M1 1L33 33" stroke="white" stroke-width="8" stroke-linecap="round"/>
                        <path d="M32.6784 1L1 32.6784" stroke="white" stroke-width="8" stroke-linecap="round"/>
                    </svg>

            .cert-zoom__wr-certificates



        include modules/footer