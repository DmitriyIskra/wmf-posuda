                        ul.advantages-bc__wr-card-list
                            li.advantages-bc__wr-card-item
                                header.advantages-bc__wr-card-header.advantages-bc__wr-card-header_desctop
                                    h2.advantages-bc__wr-card-title 
                                        span Cпециальная проводка
